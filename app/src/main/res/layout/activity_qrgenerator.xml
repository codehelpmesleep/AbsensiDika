<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"

    tools:context=".MainActivity">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:background="@drawable/radiussiapp"
      android:elevation="3dp">




    <LinearLayout
        android:id="@+id/btnMenuAtas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/logo"
          android:layout_width="200dp"
          android:layout_height="65dp"
          android:scaleType="fitXY"
          android:src="@drawable/dikalogo" />


    </LinearLayout>

  </RelativeLayout>
  <ImageView
      android:id="@+id/qrImage"
      android:layout_width="300dp"
      android:layout_height="300dp"
      android:layout_gravity="center_horizontal"
      android:layout_margin="40dp"
      app:srcCompat="@drawable/qr_code_besar" />

  <com.github.nikartm.button.FitButton
      android:id="@+id/btnQR"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:layout_margin="16dp"
      android:gravity="center_vertical"

      app:fb_backgroundColor="#143a69"
      app:fb_borderColor="#d1a90c"
      app:fb_borderWidth="@dimen/_2sdp"
      app:fb_cornerRadius="12dp"
      app:fb_divColor="#fff"
      app:fb_divHeight="35dp"
      app:fb_divMarginStart="@dimen/_12sdp"
      app:fb_divWidth="1dp"
      app:fb_icon="@drawable/tab_absen_qr"
      app:fb_iconColor="#fff"
      app:fb_iconMarginEnd="2dp"
      app:fb_iconMarginStart="@dimen/_12sdp"
      app:fb_iconPosition="left"
      app:fb_rippleColor="#BBDEFB"
      app:fb_shape="rectangle"
      app:fb_text="GENERATE QR CODE"
      app:fb_textColor="#fff"
      app:fb_textPaddingStart="10dp"

      app:fb_textSize="@dimen/_18sdp" />

</LinearLayout>