<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Permission.activity.PermissionApproval">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/layoutSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#143a69"
            android:elevation="3dp">




            <LinearLayout
                android:id="@+id/btnMenuAtas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="200dp"
                    android:layout_height="65dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dikalogo" />


            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/typer_roboto_bold"
            android:text="Status"
            android:textColor="@color/colorfontsiap"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner2"
            style="@style/SpinnerThemeSiapp"

            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:layout_margin="4dp"
            android:entries="@array/status_approvalx"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:popupBackground="@android:color/white"
            android:textColor="@color/colorfontsiap"
            android:textSize="15sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layoutSelect"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.github.nikartm.button.FitButton
            android:id="@+id/btnPengajuanIjin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="16dp"
            android:gravity="center_vertical"

            app:fb_backgroundColor="#143a69"
            app:fb_borderColor="#d1a90c"
            app:fb_borderWidth="@dimen/_2sdp"
            app:fb_cornerRadius="12dp"
            app:fb_divColor="#fff"
            app:fb_divHeight="35dp"
            app:fb_divMarginStart="@dimen/_12sdp"
            app:fb_divWidth="1dp"
            app:fb_icon="@drawable/ic_thumb_up"
            app:fb_iconColor="#fff"
            app:fb_iconMarginEnd="2dp"
            app:fb_iconMarginStart="@dimen/_12sdp"
            app:fb_iconPosition="left"
            app:fb_rippleColor="#BBDEFB"
            app:fb_shape="rectangle"
            app:fb_text="Pengajuan Ijin"
            app:fb_textColor="#fff"
            app:fb_textPaddingStart="10dp"

            app:fb_textSize="@dimen/_24sdp" />
    </LinearLayout>

</RelativeLayout>
