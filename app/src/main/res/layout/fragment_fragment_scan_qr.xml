<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.siapp.siapp.Absensi.Fragment.FragmentScanQR">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHariIni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typer_roboto_bold"
            android:text="Jumat, 25 April 2019"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/colorfontsiap"
            android:textSize="18sp" />

        <TextClock
            android:id="@+id/txtJam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:backgroundTint="@color/colorfontsiap"
            android:format24Hour="hh:mm:ss a"
            android:lineSpacingExtra="10sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAppearance="@style/TextAppearance.Subhead.Bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:theme="@style/Button.Accent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pindai QR Dari Danru"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Subhead.Bold"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Untuk Absen Kehadiran"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Subhead.Bold"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dan Pulang"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Subhead.Bold"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/qr_code_besar" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shift"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Subhead.Bold"
            android:textColor="@color/colorfontsiap"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAGI"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Subhead.Bold"
            android:textColor="@color/colorfontsiap"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/txt_area_siapp"
                android:backgroundTint="@color/colorfontsiap"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/txtJamMasuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorfontsiap"
                    android:text="13:00"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Subhead.Bold"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:text="Jam Masuk"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Subhead.Bold"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/txt_area_siapp"
                android:backgroundTint="@color/colorfontsiap"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/txtJamPulang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorfontsiap"
                    android:text="15:00"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Subhead.Bold"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:text="Jam Pulang"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Subhead.Bold"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnQr"
                style="@style/Button.Accent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:backgroundTint="@color/colorfontsiap"
                android:gravity="top"
                android:lineSpacingExtra="10sp"
                android:text="MULAI PINDAI"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Subhead.Bold"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:theme="@style/Button.Accent" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
