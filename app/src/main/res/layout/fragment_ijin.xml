<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.siapp.siapp.Absensi.Fragment.FragmentScanQR">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/layoutSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/typer_roboto_bold"
            android:text="Status"
            android:textColor="@color/colorfontsiap"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner2"
            style="@style/SpinnerThemeSiapp"

            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:layout_margin="4dp"
            android:entries="@array/status_approval"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:popupBackground="@android:color/white"
            android:textColor="@color/colorfontsiap"
            android:textSize="15sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layoutSelect"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPengajuanIjin"
            style="@style/Button.Accent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_alignBottom="@+id/layoutSelect"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/colorfontsiap"
            android:gravity="top"
            android:lineSpacingExtra="10sp"
            android:text="PENGAJUAN IJIN"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Subhead.Bold"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:theme="@style/Button.Accent" />
    </LinearLayout>

</RelativeLayout>
