<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:theme="@style/AppTheme.AppBarOverlay">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorfontsiap"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-36dp"
        android:scrollbars="none"
        android:scrollingCache="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center"
        android:orientation="vertical">
            <View
                android:layout_width="0dp"
                android:layout_height="35dp" />

        <ImageButton
            android:id="@+id/btnKeamanan"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_weight="1"

            android:backgroundTint="@color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/tombolpanikpolos" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typer_roboto_bold"
            android:gravity="center"
            android:text="DATANG"
            android:textColor="@color/colorfontsiap"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnKebakaran"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:backgroundTint="@color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/tombolpanikpolos" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typer_roboto_bold"
            android:gravity="center"
            android:text="PULANG"
            android:textColor="@color/colorfontsiap"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnMedic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:backgroundTint="@color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/tombolpanikpolos" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typer_roboto_bold"

            android:text="UPDATE PULANG"
            android:textColor="@color/colorfontsiap"
            android:textSize="21sp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>




        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
    </com.google.android.material.appbar.AppBarLayout>

</LinearLayout>