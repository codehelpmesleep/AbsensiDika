<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Absensi.Camera.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/cPreview">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/frame_photo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnSwitch"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/transparent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/turn_camera" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Putar Camera"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Subhead.Bold"
                    android:textColor="@color/colorfontsiap"
                    android:textSize="10sp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/transparent"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/down_chevro_big" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DATANG"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Subhead.Bold"
                    android:textColor="@color/colorfontsiap"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ellipse"
                    android:scaleType="centerInside"
                    android:text="OK"
                    android:textAlignment="center"

                    android:textAppearance="@style/TextAppearance.Subhead.Bold"
                    android:textColor="@color/colorfontsiap"
                    android:textSize="32sp"
                    app:srcCompat="@drawable/ellipse" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ellipse"
                    android:scaleType="centerInside"
                    android:text="X"

                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Subhead.Bold"
                    android:textColor="@color/colorfontsiap"
                    android:textSize="25sp"
                    app:srcCompat="@drawable/ellipse" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton5"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/transparent"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/up_chevron_small" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Pulang"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Subhead.Bold"
                    android:textColor="@color/colorfontsiap"
                    android:textSize="10sp" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/transparent"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/up_chevron" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PULANG"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Subhead.Bold"
                    android:textColor="@color/colorfontsiap"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>